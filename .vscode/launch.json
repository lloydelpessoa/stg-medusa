  "version": "0.2.0",
  "configurations": [
    {
      "name": "Attach to Chrome",
      "port": 9292,
      "request": "attach",
      "type": "chrome",
      "webRoot": "${workspaceFolder}"
    },
    {
      "type": "node-terminal",
      "name": "Run Script: dev (backend)",
      "request": "launch",
      "command": "npm run dev",
      "cwd": "${workspaceFolder}/stg"
    },
    {
      "type": "node-terminal",
      "name": "Run Script: dev (frontend)",
      "request": "launch",
      "command": "npm run dev",
      "cwd": "${workspaceFolder}/stg-storefront"
    },
    {
      "type": "node-terminal",
      "name": "Ngrok",
      "request": "launch",
      "command": "ngrok start --all --config ngrok.yml",
      "cwd": "${workspaceFolder}"
    }
  ]
}